.root {
  margin: 0 auto;
  padding-left: 1.5rem;
  padding-right: 1.5rem;
  width: 100%;

  @media (--sm-up) {
    max-width: 540px;
  }

  @media (--md-up) {
    max-width: 708px;
  }

  @media (--lg-up) {
    max-width: 100%;
    padding: 0;
  }
}

@media (--xs) {
  .DocsContainer {
    overflow: hidden;
  }
}
