.modalContentArea {
    padding: 24px 1.5um;
    border-top: 1px solid #f2f1f1;
    font-size: 16px;
    border-radius: inherit;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    word-break: break-word;
}

@media (--xs) {
    .modalContentArea {
        padding: 40px 1.5um;
        font-size: 14px;
        line-height: 24px;
    }
}
